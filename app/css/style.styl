.slider
	margin-bottom: 0 !important
	overflow-x: hidden
	.slick-dots
		bottom 0px
	.dot
		opacity:.5
		tr(all)
		&:hover
			opacity:1
	.slick-active
		.dot
			border 1px solid #ffffff73 !important
.slider__el
	+below(640px)
		padding: 25%
	bg-full()
	padding: 18% 10%
	display: list-item!important
