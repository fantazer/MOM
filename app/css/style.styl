	height: 55px
	background-color #ffffff
	border-bottom 1px solid #f8f8f8
	padding: 0 10px
.header-cont
	+below(1200px)
		padding: 10px
	center(1375px,10px)
	padding: 10px 0
	f()
	align-items: center
	height: 100%
.header-logo
	+below(640px)
		width: 120px
		max-width initial
	//width: 12%
	max-width 12%
.header-logo-divider
	+below(640px)
		display: none
	margin: 0 15px
	height: 30px
	width: 1px
	background: $gray
.header-location
	+below(640px)
		display: none
	@extend .type--sm
	margin-right: 30px
.header-phone
	+below(1200px)
		display: none
	flex(mid)
.header-phone__icon
	.icon
		fill $pink
		size 30px
		margin-right: 15px
.header-phone__val
