		fill $silver
.description-el__plus
	position: absolute
	top 6px
	right: -3px
	z-index 10
	&:hover
		.description-el__more
			opacity:1
			transform translate(0,0)
			left: 100%
.description-el__more
	@extend .type--xs
	height: auto
	transition opacity .4s, transform .4s
	position: absolute
	bottom 100%
	left: 100%
	background: white
	box-shadow 0 2px 8px rgba(43, 45, 53, 0.1)
	border-radius 10px
	padding: 15px 20px
	line-height: 1.6
	width: 190px
	opacity:1
	transform translate(20px,-20px)
	left -9999px

.bubble
	position: relative
	cp()
	display: inline-block
	&:hover
