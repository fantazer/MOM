include block_html/_style.pug
include block_html/_include.pug

.page.skin--fe
	+header('main')
	.page-content
		.main-cont
			.lk-banner
				img(src="img/lk-banner.jpg", alt="")
			.lk
				.lk-bar
					.lk-user
						.lk-user__icon
							+icon("user","icon")
						.lk-user__content
							.user__title Константин Константинопольский
							a(href="#").lk-user__out Выйти из аккаунта
					.lk-menu
						a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("pocket","icon")
							.lk-menu__el-text Мои финансы
								span.slide-menu-money 2167 ₽
						a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("purse","icon")
							.lk-menu__el-text Вывод средств
						a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("profile-plus","icon")
							.lk-menu__el-text Мой промокод
						a(href="#").lk-menu__el.lk-menu__el--active
							.lk-menu__el-icon
								+icon("food","icon")
							.lk-menu__el-text Мои заказы
						a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("history","icon")
							.lk-menu__el-text История заказов
						a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("payment","icon")
							.lk-menu__el-text История начислений
						a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("profile","icon")
							.lk-menu__el-text Профиль
						//a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("payment","icon")
							.lk-menu__el-text История начислений
				.lk-content
					.title.title--center Мой промокод
					.lk-section
						.content
							p Поделись своим промокодом или ссылкой с другом. Вы оба получите бонусы на свой счёт. Потратить их можно будет в любой момент.
						.promo
							.promo__el
								.promo__el-icon
									+icon("voucher","icon")
								.promo__el-content
									.promo__el-title Мой промокод
									.promo__el-val
										.promo__el-val-text RO4400
										.promo__el-val-copy
											+icon("copy","icon")
							.promo__el
								.promo__el-icon
									+icon("link","icon")
								.promo__el-content
									.promo__el-title Моя ссылка
									.promo__el-val
										.promo__el-val-text https://growfood.pro/?invite=ro4400
										.promo__el-val-copy
											+icon("copy","icon")

					.lk-section
						.title.title--center Промокод при регистрации

						.card.card--green
							.book-row
								.book-row__title Код
								.book-row__dot
								.book-row__value KT3245
							.book-row
								.book-row__title Имя
								.book-row__dot
								.book-row__value Константин Константинопольский
							.book-row
								.book-row__title Телефон
								.book-row__dot
								.book-row__value +7 456 123 45 67
							.book-row
								.book-row__title Почта
								.book-row__dot
								.book-row__value mail@mail.com

					.lk-section
						.title.title--center Приглашенные клиенты
						.clients
							- for (var i=0;i<4;i++)
								.card
									.book-row
										.book-row__title Дата заказа
										.book-row__dot
										.book-row__value 15 / 02 / 2019 на 14 дней
									.book-row
										.book-row__title Имя
										.book-row__dot
										.book-row__value Константин Константинопольский
									.book-row
										.book-row__title Телефон
										.book-row__dot
										.book-row__value +7 456 123 45 67
									.book-row
										.book-row__title Почта
										.book-row__dot
										.book-row__value mail@mail.com
									.book-row
										.book-row__title Баллы
										.book-row__dot
										.book-row__value.book-row__value--md.book-row__value--green +700 баллов
	+footer()
	+modal()
include ./block_html/_script.pug
