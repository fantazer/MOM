include block_html/_style.pug
include block_html/_include.pug

.page.skin--fe
	+header('main')
	.page-content
		.main-cont
			.lk-banner
				img(src="img/lk-banner.jpg", alt="")
			.lk
				.lk-bar
					.lk-user
						.lk-user__icon
							+icon("user","icon")
						.lk-user__content
							.user__title Константин Константинопольский
							a(href="#").lk-user__out Выйти из аккаунта
					.lk-menu
						a(href="#").lk-menu__el.lk-menu__el--active
							.lk-menu__el-icon
								+icon("food","icon")
							.lk-menu__el-text Мои заказы
						a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("gift","icon")
							.lk-menu__el-text Мои бонусы
								span.slide-menu-money 2167 ₽
						a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("profile-plus","icon")
							.lk-menu__el-text Пригласить друга
						a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("history","icon")
							.lk-menu__el-text История заказов
						a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("profile","icon")
							.lk-menu__el-text Профиль
						//a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("purse","icon")
							.lk-menu__el-text Вывод средств
						//a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("payment","icon")
							.lk-menu__el-text История начислений

				.lk-content
					.title.title--center Мои заказы
					.lk-section
						.indent-row
							.indent
								.indent-content
									.indent-col
										.indent-head программа питания
										.indent-title Lion
										.indent-name Здоровая нация. Лечебное питание
										.indent-descr Оформлен 25 / 10 / 2019 на 14 дней
									.indent-col
										.indent-head стоимость
										.indent-cost 10 580 ₽
										.indent-bonus вы получите
											span.indent-bonus-val 200 баллов
								.indent-state.indent-state--unpay
									span не оплачен
							.indent-pay
								.indent-pay__text Закажите программу питания и получите бонусные баллы на свой счёт!
								.btn--md.btn--mark.indent-pay__get Оплатить
								.indent-pay__remove
									+icon("garbage","icon")
					- for (var i=0;i<4;i++)
						.indent-row
							.indent
								.indent-content
									.indent-col
										.indent-head программа питания
										.indent-title MAXIMUM
										.indent-name Здоровая нация. Лечебное питание
										.indent-descr Оформлен 25 / 10 / 2019 на 14 дней
									.indent-col
										.indent-head стоимость
										.indent-cost 12 580 ₽
										.indent-bonus вы получите
											span.indent-bonus-val 200 баллов
								.indent-state
									span оплачен

	+footer()
	+modal()
include ./block_html/_script.pug
