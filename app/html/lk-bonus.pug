include block_html/_style.pug
include block_html/_include.pug

.page.skin--fe
	+header('main')
	.page-content
		.main-cont
			.lk-banner
				img(src="img/lk-banner.jpg", alt="")
			.lk
				.lk-bar
					.lk-user
						.lk-user__icon
							+icon("user","icon")
						.lk-user__content
							.user__title Константин Константинопольский
							a(href="#").lk-user__out Выйти из аккаунта
					.lk-menu
						a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("food","icon")
							.lk-menu__el-text Мои заказы
						a(href="#").lk-menu__el.lk-menu__el--active
							.lk-menu__el-icon
								+icon("gift","icon")
							.lk-menu__el-text Мои бонусы
								span.slide-menu-money 2167 ₽
						a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("profile-plus","icon")
							.lk-menu__el-text Пригласить друга
						a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("history","icon")
							.lk-menu__el-text История заказов
						a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("profile","icon")
							.lk-menu__el-text Профиль
						//a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("purse","icon")
							.lk-menu__el-text Вывод средств
						//a(href="#").lk-menu__el
							.lk-menu__el-icon
								+icon("payment","icon")
							.lk-menu__el-text История начислений

				.lk-content
					.title.title--center Мои бонусы
					.lk-section
						.banner-bonus
							.banner-bonus__head(style="background-image:url('img/banner-bonus.jpg')")
								.banner-bonus-info
									.banner-bonus-info__text на вашем счету
									.banner-bonus-info__val 200
									.banner-bonus-info__text бонусных баллов
							.banner-bonus__footer
								.banner-bonus__footer-text бонусными баллами можно оплатить до 100% от стоимости заказа!
					.lk-section
						- for (var i=0;i<4;i++)
							.akkord__el
								.akkord__el-head
									.akkord__el-head-text Как мне заказать питание?
									.akkord__el-head-icon
								.akkord__el-content
									p Меню разработано профессиональным нутрициологом Юлей Гурбановой - cоздателем проекта осознанного питания GetLean.

									p Юля проходила курсы по питанию и нутрициологии в Stanford University, The Hong Kong University of Science and Technology, The University of Edinburgh, AFPA. American Fitness & Professionals Association.

	+footer()
	+modal()
include ./block_html/_script.pug
